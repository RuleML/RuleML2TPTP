<?xml version="1.0" encoding="UTF-8"?>


<RuleML xmlns="http://ruleml.org/spec">
  <Query>
    <Implies>
      <if>
        <Modal>
          <variety>
            <Box><arg><Const>a</Const></arg></Box>
          </variety>
          <proposition>
            <Forall>
              <declare><Var>X</Var></declare>
              <formula>
                <Atom>
                  <op><Rel>p</Rel></op>
                  <arg><Var>X</Var></arg>
                </Atom>
              </formula>
            </Forall>
          </proposition>
        </Modal>
      </if>
      <then>
        <Modal>
          <variety>
            <Dia><arg><Const>b</Const></arg></Dia>
          </variety>
          <proposition>
            <Exists>
              <declare><Var>X</Var></declare>
              <formula>
                <Atom>
                  <op><Rel>p</Rel></op>
                  <arg><Var>X</Var></arg>
                </Atom>
              </formula>
            </Exists>
          </proposition>
        </Modal>
      </then>
    </Implies>
  </Query>
</RuleML>
