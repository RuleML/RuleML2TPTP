<?xml version="1.0" encoding="UTF-8"?>

<RuleML xmlns="http://ruleml.org/spec">
    <Assert>
        <Equal>
            <left>
                <Const>union</Const>
            </left>
            <right>
                <Lambda>
                    <declare>
                        <Entitype>
                            <entity>
                                <Var>X</Var>
                            </entity>
                            <type>
                                <Arrow>
                                    <domain>
                                        <Const>$i</Const>
                                    </domain>
                                    <codomain>
                                        <Const>$o</Const>
                                    </codomain>
                                </Arrow>
                            </type>
                        </Entitype>
                    </declare>
                    <declare>
                        <Entitype>
                            <entity>
                                <Var>Y</Var>
                            </entity>
                            <type>
                                <Arrow>
                                    <domain>
                                        <Const>$i</Const>
                                    </domain>
                                    <codomain>
                                        <Const>$o</Const>
                                    </codomain>
                                </Arrow>
                            </type>
                        </Entitype>
                    </declare>
                    <declare>
                        <Entitype>
                            <entity>
                                <Var>U</Var>
                            </entity>
                            <type>
                                <Const>$i</Const>
                            </type>
                        </Entitype>
                    </declare>
                    <formula>
                        <Or>
                            <formula>
                                <Uniterm>
                                    <op>
                                        <Var>X</Var>
                                    </op>
                                    <arg>
                                        <Var>U</Var>
                                    </arg>
                                </Uniterm>
                            </formula>
                            <formula>
                                <Uniterm>
                                    <op>
                                        <Var>Y</Var>
                                    </op>
                                    <arg>
                                        <Var>U</Var>
                                    </arg>
                                </Uniterm>
                            </formula>
                        </Or>
                    </formula>
                </Lambda>
            </right>
        </Equal>
    </Assert>
</RuleML>
