<?xml version="1.0" encoding="UTF-8"?>

<RuleML xmlns="http://ruleml.org/spec">
  <Query>
    <Forall>
      <declare>
        <Entitype>
          <entity>
            <Var>A</Var>
          </entity>
          <type>
            <Tmap>
              <domain>
                <Tbase>i</Tbase>
              </domain>
              <codomain>
                <Tbase>o</Tbase>
              </codomain>
            </Tmap>
          </type>
        </Entitype>
      </declare>
      <declare>
        <Entitype>
          <entity>
            <Var>B</Var>
          </entity>
          <type>
            <Tmap>
              <domain>
                <Tbase>i</Tbase>
              </domain>
              <codomain>
                <Tbase>o</Tbase>
              </codomain>
            </Tmap>
          </type>
        </Entitype>
      </declare>
      <declare>
        <Entitype>
          <entity>
            <Var>C</Var>
          </entity>
          <type>
            <Tmap>
              <domain>
                <Tbase>i</Tbase>
              </domain>
              <codomain>
                <Tbase>o</Tbase>
              </codomain>
            </Tmap>
          </type>
        </Entitype>
      </declare>
      <termula>
        <Equal>
          <left>
            <Uniterm>
              <op>
                <Const>union</Const>
              </op>
              <arg>
                <Var>A</Var>
              </arg>
              <arg>
                <Uniterm>
                  <op>
                    <Const>intersection</Const>
                  </op>
                  <arg>
                    <Var>B</Var>
                  </arg>
                  <arg>
                    <Var>C</Var>
                  </arg>
                </Uniterm>
              </arg>
            </Uniterm>
          </left>
          <right>
            <Uniterm>
              <op>
                <Const>intersection</Const>
              </op>
              <arg>
                <Uniterm>
                  <op>
                    <Const>union</Const>
                  </op>
                  <arg>
                    <Var>A</Var>
                  </arg>
                  <arg>
                    <Var>B</Var>
                  </arg>
                </Uniterm>
              </arg>
              <arg>
                <Uniterm>
                  <op>
                    <Const>union</Const>
                  </op>
                  <arg>
                    <Var>A</Var>
                  </arg>
                  <arg>
                    <Var>C</Var>
                  </arg>
                </Uniterm>
              </arg>
            </Uniterm>
          </right>
        </Equal>
      </termula>
    </Forall>
  </Query>
</RuleML>
