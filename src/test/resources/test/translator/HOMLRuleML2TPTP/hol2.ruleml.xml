<?xml version="1.0" encoding="UTF-8"?>

<RuleML xmlns="http://ruleml.org/spec">
    <Query>
        <Forall>
            <declare>
                <Entitype>
                    <entity>
                        <Var>A</Var>
                    </entity>
                    <type>
                        <Arrow>
                            <domain>
                                <Const>$i</Const>
                            </domain>
                            <codomain>
                                <Const>$o</Const>
                            </codomain>
                        </Arrow>
                    </type>
                </Entitype>
            </declare>
            <declare>
                <Entitype>
                    <entity>
                        <Var>B</Var>
                    </entity>
                    <type>
                        <Arrow>
                            <domain>
                                <Const>$i</Const>
                            </domain>
                            <codomain>
                                <Const>$o</Const>
                            </codomain>
                        </Arrow>
                    </type>
                </Entitype>
            </declare>
            <declare>
                <Entitype>
                    <entity>
                        <Var>C</Var>
                    </entity>
                    <type>
                        <Arrow>
                            <domain>
                                <Const>$i</Const>
                            </domain>
                            <codomain>
                                <Const>$o</Const>
                            </codomain>
                        </Arrow>
                    </type>
                </Entitype>
            </declare>
            <formula>
                <Equal>
                    <left>
                        <Uniterm>
                            <op>
                                <Const>union</Const>
                            </op>
                            <arg>
                                <Var>A</Var>
                            </arg>
                            <arg>
                                <Uniterm>
                                    <op>
                                        <Const>intersection</Const>
                                    </op>
                                    <arg>
                                        <Var>B</Var>
                                    </arg>
                                    <arg>
                                        <Var>C</Var>
                                    </arg>
                                </Uniterm>
                            </arg>
                        </Uniterm>
                    </left>
                    <right>
                        <Uniterm>
                            <op>
                                <Const>intersection</Const>
                            </op>
                            <arg>
                                <Uniterm>
                                    <op>
                                        <Const>union</Const>
                                    </op>
                                    <arg>
                                        <Var>A</Var>
                                    </arg>
                                    <arg>
                                        <Var>B</Var>
                                    </arg>
                                </Uniterm>
                            </arg>
                            <arg>
                                <Uniterm>
                                    <op>
                                        <Const>union</Const>
                                    </op>
                                    <arg>
                                        <Var>A</Var>
                                    </arg>
                                    <arg>
                                        <Var>C</Var>
                                    </arg>
                                </Uniterm>
                            </arg>
                        </Uniterm>
                    </right>
                </Equal>
            </formula>
        </Forall>
    </Query>
</RuleML>
